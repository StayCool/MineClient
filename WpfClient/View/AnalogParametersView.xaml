<UserControl x:Class="WpfClient.View.AnalogParametersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.codeplex.com"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:plot="clr-namespace:WpfClient.ViewModel.Plot"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance plot:AnalogParametersVm}"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    
    <Grid Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=ActualHeight}" 
          HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <oxy:Plot x:Name="Plot1" 
                  Title="A Graph" Model="{Binding PlotModel}" Margin="50">
        </oxy:Plot>
    </Grid>
    
</UserControl>
