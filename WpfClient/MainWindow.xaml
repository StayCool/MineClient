<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:WpfClient.ViewModel" 
        xmlns:wpfApplication3="clr-namespace:WpfClient.View"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow" Height="Auto" Width="Auto">
    <Grid Name="gridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.DataContext>
            <loc:MainVm/>
        </Grid.DataContext>


        <Menu Height="20" VerticalAlignment="Top" Grid.Row="0" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
            <MenuItem Header="ФАЙЛ"/>
            <MenuItem Header="ПРАВКА"/>
            <MenuItem Header="ВИД">
                <MenuItem Header="Параметры в цифровом виде" VerticalAlignment="Center" Width="Auto"
                          Command="{Binding MenuClick}" CommandParameter="FanParams" />
                <MenuItem Header="Параметры в аналоговом виде" VerticalAlignment="Center" Width="Auto"
                          Command="{Binding MenuClick}" CommandParameter="FanParamsAnalog" />
            </MenuItem>
        </Menu>


        <ContentControl Grid.Row="1" Content="{Binding CurrentView}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type loc:ParametersVm}">
                    <wpfApplication3:ParametersView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type loc:AnalogParametersVm}">
                    <wpfApplication3:AnalogParametersView />
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>
